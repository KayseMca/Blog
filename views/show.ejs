
<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        <div class="ui row center aligned  grid">
            <div class="column"> <%= blog.title %></div>
        </div>
    </div>
    <div class="ui top attached">
        <div class="item">
           <img src="<%= blog.image %>" width="300" height="250" class="ui centered rounded image">
           <div class="content">
                <span> <%= blog.created.toDateString() %> </span>
           </div>
           <div class="ui raised segment  description" id="desc">
                <p> <%- blog.body %> </p>
           </div>

           <button class="ui inverted big violet button"><a href="/blogs/<%= blog._id %>/edit">Edit</a></button>
           <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button class="ui inverted big red button">Delete</button>
            </form>
           
        </div>
    </div>
</div>

<% include ./partials/footer %>